<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
    </root>
    <logger name="org.springframework.web" level="DEBUG"/>

    <appender name="TRANSACTION-FILE" class="ch.qos.logback.core.FileAppender">
        <file>transaction.log</file>
        <append>true</append>
        <immediateFlush>true</immediateFlush>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} - %replace(%replace(%msg%n){"'\d{3}'", "'XXX'"}){'(\d{12})(\d+)',
                'XXXXXXXXXXXX$2'}
            </pattern>
        </encoder>
    </appender>
    <logger name="transaction_logger" level="info" additivity="false">
        <appender-ref ref="TRANSACTION-FILE"/>
    </logger>
</configuration>